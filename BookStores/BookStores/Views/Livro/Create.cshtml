@model BookStores.ViewModels.EditorBookViewModel
@{
    ViewBag.Title = "Criando um novo livro...";
    //Layout = "~/Views/Shared/_LayoutNovo.cshtml";
}

@helper MinhaFuncao(string nome)
{
    <text>Você está logado com @nome </text>
}

<p>
    @MinhaFuncao("Alan Martins")
</p>


<h2>Novo Livro</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "required" });

    <div class="alert alert-danger">
        @Html.ValidationMessage("Mensagem");
    </div>
   

    @Html.Partial("Partials/EditorBookPartial", Model);

    <button type="submit" class="btn btn-primary">Criar</button>
}

